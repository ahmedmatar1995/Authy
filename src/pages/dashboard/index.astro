---
import Layout from "../../layouts/Layout.astro";
const res = await fetch("http://localhost:4321/api/auth");
const result = await res.json();
if (!result.success) return Astro.redirect("/login");
---

<Layout title="dashboard">
  <div class="w-full py-20 flex">
    <div class="w-[400px] m-auto">
      <div class="card w-full rounded shadow-xl">
        <div class="card-body">
          <figure>
            <img
              src="https://evilmartians.com/static/f792e42e6784c3a9d0f22b7992151a36/ccd24/cover.webp"
              alt="image"
              class="w-full h-[300px] object-contain transform scale-125 motion-preset-confetti"
            />
          </figure>
          <h3
            class="card-title capitalize font-bold text-primary-white dark:text-primary-dark"
          >
            welcome again
          </h3>
          <p class="mt-4 text-primary-white capitalize dark:text-primary-dark">
            we glad that you are here , enjoy our empty area, it is yours
          </p>
          <button
            id="logoutBtn"
            class="btn bg-red-500 w-fit mt-4 outline-none text-primary-white border-none px-4 py-2 cursor-pointer capitalize font-bold"
          >
            logout
          </button>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script is:inline>
  logoutBtn.addEventListener("click", async () => {
      const res = await fetch("/api/logout");
      const result = await res.json();
      if(result.success) return location.assign("/login")
  })
</script>

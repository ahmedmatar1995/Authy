<div class="w-full flex py-20">
  <div class="w-[500px] m-auto">
    <div class="card w-full rounded shadow-xl bg-primary-white">
      <div class="card-body">
        <h3
          class="card-title capitalize font-extrabold text-primary-gray text-2xl motion-preset-fade-md"
        >
          {Astro.url.pathname.split("/")[1]}
        </h3>
        <p class="mt-2 text-md capitalize text-primary-gray">
          login/signup and join our board
        </p>
        <div class="card-actions">
          <form id="form">
            <div class="form-group">
              <div class="form-field">
                <label class="input input-bordered flex items-center gap-2">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 16 16"
                    fill="currentColor"
                    class="h-4 w-4 opacity-70"
                  >
                    <path
                      d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z"
                    ></path>
                    <path
                      d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z"
                    ></path>
                  </svg>
                  <input
                    type="email"
                    name="email"
                    id="email"
                    class="placeholder:capitalize"
                    placeholder="email"
                    autocomplete="username"
                    required
                  />
                </label>
              </div>
              <div class="form-field mt-2">
                <label class="input input-bordered flex items-center gap-2">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 16 16"
                    fill="currentColor"
                    class="h-4 w-4 opacity-70"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z"
                      clip-rule="evenodd"></path>
                  </svg>
                  <input
                    type="password"
                    name="password"
                    id="password"
                    class="placeholder:capitalize"
                    placeholder="password"
                    autocomplete={Astro.url.pathname === "/login"
                      ? "current-password"
                      : "new-password"}
                    required
                  />
                </label>
              </div>
              <button
                id="submitBtn"
                type="submit"
                class="btn w-full bg-primary-gray text-primary-white capitalize font-bold mt-2"
              >
                {Astro.url.pathname.split("/")[1]}
              </button>
            </div>
          </form>

          <div class="w-full mt-4 h-1 bg-gray-200"></div>
          <div class="w-full mt-4 flex items-center justify-center">
            <a
              href={Astro.url.pathname === "/login" ? "/register" : "/login"}
              class="text-primary-gray font-thin text-sm"
            >
              {
                Astro.url.pathname === "/login"
                  ? "create new account?"
                  : "have an account, login"
              }
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script is:inline>
  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    submitBtn.disabled = true;
    let email = form.email.value;
    let password = form.password.value;

    const data = { email, password };

    if (location.pathname === "/register") {
      const res = await fetch("/api/register", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(data),
      });
      const result = await res.json();
      submitBtn.disabled = false;
      if (result.success) return location.assign("/login");
    } else {
      const res = await fetch("/api/login", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(data),
      });
      const result = await res.json();
      submitBtn.disabled = false;
      if (result.success) return location.assign("/dashboard");
    }
  });
</script>
